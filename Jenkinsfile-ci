pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDS = credentials('dockerhub-credentials')
    }
    stages {
                
        stage('Test') {
            steps {
                sh '''
                # Si no existe el entorno virtual, lo creamos.
                if [ ! -f "${WORKSPACE}/venv_test/bin/activate" ]; then
                    rm -rf "${WORKSPACE}/venv_test"
                    python3 -m venv --upgrade-deps "${WORKSPACE}/venv_test"
                fi

                # Activamos el entorno virtual y usamos el pip que allí se instaló 
                . "${WORKSPACE}/venv_test/bin/activate"
                pip install -r requirements.txt
                pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }
        
        stage('Build & Push Image') {
            steps {
                script {
                    def image = docker.build("marifervl/whats-next-api:${env.BUILD_NUMBER}")
                    docker.withRegistry(
                        'https://registry.hub.docker.com',
                        'dockerhub-credentials'
                    ) {
                        image.push()
                    }
                }
            }
        }
    }
    post {
        success {
            echo "Build succeeded! Image pushed successfully."
        }
        failure {
            echo "Build failed. Please review the test logs and error messages."
        }
    }
}
